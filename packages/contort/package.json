{
  "name": "contort",
  "type": "module",
  "version": "0.0.12",
  "description": "Control what LLMs can, and can't, say",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekevinscott/contortionist.git"
  },
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "copy:package-files": "wireit",
    "lint": "wireit",
    "test": "vitest",
    "clean": "wireit",
    "build": "wireit",
    "build:check": "wireit"
  },
  "wireit": {
    "clean": {
      "command": "rimraf ./dist"
    },
    "lint": {
      "command": "eslint -c ../../.eslintrc.cjs src --ext .ts"
    },
    "build:check": {
      "command": "path-exists ./dist/index.umd.cjs "
    },
    "copy:package-files": {
      "command": "cp ../../README.md ./README.md && cp ../../LICENSE ./LICENSE"
    },
    "build": {
      "command": "vite build && pnpm copy:package-files && pnpm build:check",
      "dependencies": [
        "clean"
      ],
      "files": [
        "../../README.md",
        "../../LICENSE",
        "./src/**/*.ts",
        "package.json",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "./dist/**",
        "./LICENSE",
        "./README.md"
      ]
    }
  },
  "author": "Kevin Scott",
  "license": "MIT",
  "keywords": [
    "llm",
    "llama.cpp",
    "transformers.js",
    "llamafile",
    "llamacpp",
    "transformersjs",
    "gbnf",
    "grammar"
  ],
  "dependencies": {
    "gbnf": "^0.1.4"
  },
  "devDependencies": {
    "@xenova/transformers": "^2.16.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@vitest/coverage-istanbul": "^1.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-string": "^3.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^1.4.0",
    "wireit": "^0.14.4"
  }
}
